{% extends 'base.html.twig' %}

{% block title %}Войти в систему{% endblock %}

{% block body %}
<div class="central">
    <div class="item-container form-container">
        <form method="post">
            {% if error %}
                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}

            {% if app.user %}
                <div class="mb-3">
                    Вы вошли как {{ app.user.username }}, <a href="{{ path('app_logout') }}">Выйти</a>
                </div>
            {% endif %}

            
            <h4>Войти в систему</h4>
            <div>
                <label for="inputEmail">Email</label>
                <input type="email" value="{{ last_username }}" name="email" id="inputEmail" required autofocus>
            </div>
            <div>
                <label for="inputPassword">Пароль</label>
                <input type="password" name="password" id="inputPassword" required>
            </div>

            <input type="hidden" name="_csrf_token"
                value="{{ csrf_token('authenticate') }}"
            >

            <div>
                <label>
                    <input type="checkbox" name="_remember_me"> Запомнить меня
                </label>
            </div>

            <button class="btn btn-warning" type="submit">
                Войти
            </button>
        </form>
    </div>
</div>
{% endblock %}
